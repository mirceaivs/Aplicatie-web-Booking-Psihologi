{
  "compilerOptions": {
    "target": "ES2020",                               
    "module": "NodeNext",
    "moduleResolution": "NodeNext",                             
    "outDir": "./build",                                 
    "allowSyntheticDefaultImports": true,             
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                 
    "skipLibCheck": true,
    "sourceMap": true,
  },
  "include":[
    "src/**/*"
  ]
}
